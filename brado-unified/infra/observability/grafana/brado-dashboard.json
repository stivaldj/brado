{
  "title": "Brado Backend Observability",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "panels": [
    {
      "type": "timeseries",
      "title": "HTTP Requests / min",
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "sum(rate(brado_http_requests_total[1m]))",
          "legendFormat": "requests/s"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "HTTP 5xx / min",
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "sum(rate(brado_http_request_errors_total[1m]))",
          "legendFormat": "errors/s"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "P95 Latency",
      "gridPos": {"x": 0, "y": 8, "w": 24, "h": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(brado_http_request_latency_seconds_bucket[5m])))",
          "legendFormat": "p95"
        }
      ]
    }
  ]
}
